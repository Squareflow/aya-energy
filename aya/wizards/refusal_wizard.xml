<odoo>

    <record id="aya_refusal_form" model="ir.ui.view">
        <field name="name">aya.refusal.form</field>
        <field name="model">aya.refusal.wizard</field>
        <field name="arch" type="xml">
            <form string="Refusal reason">
                <sheet>
                    <group>
                        <field name="order_id" readonly="1" invisible="1"/>
                        <field name="refusal_comment" />
                    </group>
                </sheet>
                <footer>
                    <button name="refuse" string="Refuse" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>